@using MilestoneMotorsWebApp.Domain.Enums
@model MilestoneMotorsWebApp.Business.ViewModels.EditCarViewModel
@{
    ViewData["Title"] = "Edit";
}

<form method="post" class="edit-page">
    @Html.AntiForgeryToken()
    <div class="row flex-md-row card card-md">
        <div class="card-body bg-primary">
            <div class="text-center mb-5">
                <h1 class="display-4 mb-2" style="font-weight: 600; padding-bottom: 10px; color: aliceblue;"><span><i class="bi bi-pencil-square"></i></span>&nbsp;Edit your listing.</h1>
            </div>
        </div>
        <div class="container" style="padding: 30px 15px;">
            <div class="form-group">
                <label asp-for="Brand"></label>
                <select asp-for="Brand" asp-items="@Html.GetEnumSelectList<Brand>()" class="form-control">
                    <option>-Select-</option>
                </select>
            </div>
            <span class="text-danger" asp-validation-for="Brand"></span>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder=" e.g., Camry, Mustang, etc." />
            </div>
            <span class="text-danger" asp-validation-for="Model"></span>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="4" placeholder="Tell us more about your car. Highlight its features, condition, and any additional information you think is important."></textarea>
            </div>
            <span class="text-danger" asp-validation-for="Description"></span>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input type="number" onkeypress="return isNumberKey(event)" min="0" value="" asp-for="Price" class="form-control" placeholder="5500 € ..." />
            </div>
            <span class="text-danger" asp-validation-for="Price"></span>
            <div class="form-group">
                <label asp-for="ManufacturingYear"></label>
                <input type="number" onkeypress="return isNumberKey(event)" min="1920" max="2024" asp-for="ManufacturingYear" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ManufacturingYear"></span>
            <div class="form-group">
                <label asp-for="Mileage"></label>
                <input type="number" onkeypress="return isNumberKey(event)" min="0" asp-for="Mileage" class="form-control" placeholder="13500 (km) ..." />
            </div>
            <span class="text-danger" asp-validation-for="Mileage"></span>
            <div class="form-group">
                <label asp-for="BodyTypes"></label>
                <select asp-for="BodyTypes" asp-items="@Html.GetEnumSelectList<BodyTypes>()" class="form-control">
                    <option>-Select-</option>
                </select>
            </div>
            <span class="text-danger" asp-validation-for="BodyTypes"></span>
            <div class="form-group">
                <label asp-for="FuelTypes"></label>
                <select asp-for="FuelTypes" asp-items="@Html.GetEnumSelectList<FuelTypes>()" class="form-control">
                    <option>-Select-</option>
                </select>
            </div>
            <span class="text-danger" asp-validation-for="FuelTypes"></span>
            <div class="form-group">
                <label asp-for="EngineCapacity"></label>
                <input type="number" onkeypress="return isNumberKey(event)" min="0" asp-for="EngineCapacity" class="form-control" placeholder="1968 (cm3) ..." />
            </div>
            <span class="text-danger" asp-validation-for="EngineCapacity"></span>
            <div class="form-group">
                <label asp-for="EnginePower"></label>
                <input asp-for="EnginePower" class="form-control" placeholder="140/190 ..." />
            </div>
            <span class="text-danger" asp-validation-for="EnginePower"></span>
            <div class="form-group">
                <label asp-for="FixedPrice"></label>
                <select asp-for="FixedPrice" asp-items="@Html.GetEnumSelectList<YesOrNo>()" class="form-control">
                    <option>-Select-</option>
                </select>
            </div>
            <span class="text-danger" asp-validation-for="FixedPrice"></span>
            <div class="form-group">
                <label asp-for="Exchange"></label>
                <select asp-for="Exchange" asp-items="@Html.GetEnumSelectList<YesOrNo>()" class="form-control">
                    <option>-Select-</option>
                </select>
            </div>
            <span class="text-danger" asp-validation-for="Exchange"></span>
            <div class="text-center" style="margin-top: 20px;">
                <button type="submit" class="btn btn-primary" style="font-size: 18px;">Submit</button>
            </div>
        </div>
</form>

<script>
    const isNumberKey = (e) => {
        const charCode = (e.which) ? e.which : e.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }
</script>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


