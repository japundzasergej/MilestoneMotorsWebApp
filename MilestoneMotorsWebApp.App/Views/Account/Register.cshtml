@model MilestoneMotorsWebApp.Common.ViewModels.RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-photo">
    <div class="form-container">
        <div class="image-holder">
        </div>
        <form method="post" action="Register">
            @Html.AntiForgeryToken()
                <h2 class="text-center"><strong>Create</strong> an account.</h2>
            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="Username">
                </div>
                <span class="errorValidation" asp-validation-for="Username" class="text-danger"></span>
            <div class="form-group">
                <input asp-for="Email" class="form-control" type="email" placeholder="Email">
            </div>
            <span class="errorValidation" asp-validation-for="Email" class="text-danger"></span>

            <div class="form-group password-container">
                <input asp-for="Password" id="passwordInput1" class="form-control" type="password" placeholder="Password">
                <span class="toggle-btn" onclick="togglePasswordVisibility(1)" style="cursor: pointer;">
                        <i class="bi bi-eye"></i>
                </span>
            </div>
            <span class="errorValidation" asp-validation-for="Password" class="text-danger"></span>

            <div class="form-group password-container">
                <input id="passwordInput2" asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password">
                <span class="toggle-btn" onclick="togglePasswordVisibility(2)" style="cursor: pointer;">
                        <i class="bi bi-eye"></i>
                </span>
            </div>
            <span class="errorValidation" asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <partial name="_ErrorNotification" />
            <div class="form-group text-center" style="margin-bottom: 15px;">
                <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
            </div><span class="already">You already have an account? <a asp-controller="Account" asp-action="Login">Login here.</a></span>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

<script>
const togglePasswordVisibility = (diff) => {
const passwordInput = document.getElementById('passwordInput' + diff);
const icon = document.querySelector('#passwordInput' + diff + ' + .toggle-btn i');

if (passwordInput.type === 'password') {
passwordInput.type = 'text';
icon.classList.remove('bi-eye');
icon.classList.add('bi-eye-fill');
} else {
passwordInput.type = 'password';
icon.classList.remove('bi-eye-fill');
icon.classList.add('bi-eye');
}
};
</script>
