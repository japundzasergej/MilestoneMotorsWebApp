@model MilestoneMotorsWebApp.Common.ViewModels.LoginUserViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="register-photo">
    <div class="form-container">
        <form method="post" action="Login">
                <h2 class="text-center"><strong>Log in</strong>, please.</h2>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email">
            </div>
                <span class="errorValidation" asp-validation-for="Email" class="text-danger"></span>

            <div class="form-group password-container">
                <input asp-for="Password" id="passwordInput" class="form-control" type="password" placeholder="Password">
                <span class="toggle-btn" onclick="togglePasswordVisibility(1)" style="cursor: pointer;">
                    <i class="bi bi-eye"></i>
                </span>
            </div>
            <span class="errorValidation" asp-validation-for="Password" class="text-danger"></span>
            <partial name="_ErrorNotification" />
            <div class="form-group text-center" style="margin-bottom: 15px;">
                <button class="btn btn-primary btn-md" type="submit">Log in</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

<script>
const togglePasswordVisibility = () => {
const passwordInput = document.getElementById('passwordInput');
const icon = document.querySelector('#passwordInput' + ' + .toggle-btn i');

if (passwordInput.type === 'password') {
passwordInput.type = 'text';
icon.classList.remove('bi-eye');
icon.classList.add('bi-eye-fill');
} else {
passwordInput.type = 'password';
icon.classList.remove('bi-eye-fill');
icon.classList.add('bi-eye');
}
};
</script>